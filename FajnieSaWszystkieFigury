import sys
from PyQt5.QtWidgets import QApplication, QGraphicsView, QGraphicsScene, QGraphicsRectItem
from PyQt5.QtSvg import QGraphicsSvgItem
from PyQt5.QtGui import QBrush, QColor
from PyQt5.QtCore import Qt, QPointF

class ChessBoard(QGraphicsView):
    def __init__(self):
        super(ChessBoard, self).__init__()
        self.scene = QGraphicsScene(self)
        self.setScene(self.scene)
        self.setSceneRect(0, 0, 640, 640)
        self.drawBoard()
        self.addPieces()

    def drawBoard(self):
        light_color = QColor(173, 216, 230)  # Light blue
        dark_color = QColor(0, 0, 139)       # Dark blue
        for i in range(8):
            for j in range(8):
                rect = QGraphicsRectItem(80 * j, 80 * i, 80, 80)
                rect.setBrush(QBrush(light_color if (i + j) % 2 == 0 else dark_color))
                self.scene.addItem(rect)

    def addPieces(self):
        # Add black and white pawns
        for i in range(8):
            pawn_black = QGraphicsSvgItem("bpawn.svg")
            pawn_black.setPos(i * 80, 1 * 80)
            pawn_black.setScale(1.8)  # Adjust scale to fit the board
            self.scene.addItem(pawn_black)

            pawn_white = QGraphicsSvgItem("wpawn.svg")
            pawn_white.setPos(i * 80, 6 * 80)
            pawn_white.setScale(1.8)  # Adjust scale to fit the board
            self.scene.addItem(pawn_white)
        # Similarly, add other pieces...

        #pionki czarne:
        rook_black = QGraphicsSvgItem("brook.svg")
        rook_black.setPos(0 * 80, 0 * 80)
        rook_black.setScale(1.8)
        self.scene.addItem(rook_black)
        
        knight_black = QGraphicsSvgItem("bknight.svg")
        knight_black.setPos(1 * 80, 0 * 80)
        knight_black.setScale(1.8)
        self.scene.addItem(knight_black)

        bishop_black = QGraphicsSvgItem("bbishop.svg")
        bishop_black.setPos(2 * 80, 0 * 80)
        bishop_black.setScale(1.8)
        self.scene.addItem(bishop_black)

        queen_black = QGraphicsSvgItem("bqueen.svg")
        queen_black.setPos(3 * 80, 0 * 80)
        queen_black.setScale(1.8)
        self.scene.addItem(queen_black)

        king_black = QGraphicsSvgItem("bking.svg")
        king_black.setPos(4 * 80, 0 * 80)
        king_black.setScale(1.8)
        self.scene.addItem(king_black)

        bishop_black = QGraphicsSvgItem("bbishop.svg")
        bishop_black.setPos(5 * 80, 0 * 80)
        bishop_black.setScale(1.8)
        self.scene.addItem(bishop_black)

        knight_black = QGraphicsSvgItem("bknight.svg")
        knight_black.setPos(6 * 80, 0 * 80)
        knight_black.setScale(1.8)
        self.scene.addItem(knight_black)
        
        rook_black = QGraphicsSvgItem("brook.svg")
        rook_black.setPos(7 * 80, 0 * 80)
        rook_black.setScale(1.8)
        self.scene.addItem(rook_black)

        #pionki bia≈Çe:
        rook_white = QGraphicsSvgItem("wrook.svg")
        rook_white.setPos(0 * 80, 7 * 80)
        rook_white.setScale(1.8)
        self.scene.addItem(rook_white)
        
        knight_white = QGraphicsSvgItem("wknight.svg")
        knight_white.setPos(1 * 80, 7 * 80)
        knight_white.setScale(1.8)
        self.scene.addItem(knight_white)
        
        bishop_white = QGraphicsSvgItem("wbishop.svg")
        bishop_white.setPos(2 * 80, 7 * 80)
        bishop_white.setScale(1.8)
        self.scene.addItem(bishop_white)

        queen_white = QGraphicsSvgItem("wqueen.svg")
        queen_white.setPos(3 * 80, 7 * 80)
        queen_white.setScale(1.8)
        self.scene.addItem(queen_white)

        king_white = QGraphicsSvgItem("wking.svg")
        king_white.setPos(4 * 80, 7 * 80)
        king_white.setScale(1.8)
        self.scene.addItem(king_white)

        bishop_white = QGraphicsSvgItem("wbishop.svg")
        bishop_white.setPos(5 * 80, 7 * 80)
        bishop_white.setScale(1.8)
        self.scene.addItem(bishop_white)

        knight_white = QGraphicsSvgItem("wknight.svg")
        knight_white.setPos(6 * 80, 7 * 80)
        knight_white.setScale(1.8)
        self.scene.addItem(knight_white)

        rook_white = QGraphicsSvgItem("wrook.svg")
        rook_white.setPos(7 * 80, 7 * 80)
        rook_white.setScale(1.8)
        self.scene.addItem(rook_white)


        
        





if __name__ == '__main__':
    app = QApplication(sys.argv)
    board = ChessBoard()
    board.show()
    sys.exit(app.exec_())
